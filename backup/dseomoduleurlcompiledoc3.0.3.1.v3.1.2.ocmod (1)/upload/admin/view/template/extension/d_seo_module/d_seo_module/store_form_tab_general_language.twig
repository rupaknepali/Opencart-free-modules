{% for field in fields %}
{% if (field['code'] == 'target_keyword') %}
<div class="form-group sort-item" data-sort-order="{{ field['sort_order'] }}">
    <label class="col-sm-2 control-label" for="input_target_keyword_{{ language_id }}"><span data-toggle="tooltip" title="{{ field['description'] }}">{{ field['name'] }}</span></label>
    <div class="col-sm-10">
		<div class="input-group">
			<input type="text" value="" placeholder="{{ field['name'] }}" id="input_target_keyword_{{ language_id }}" class="input-target-keyword form-control" language_id="{{ language_id }}"/>
			<span class="input-group-addon btn btn-target-keyword-add"><i class="fa fa-plus"></i></span>
        </div>
        <div id="target_keywords_{{ language_id }}" class="target-keywords well well-sm" language_id="{{ language_id }}">
			{% for sort_order, keyword in target_keyword[language_id] %}
			<div class="target-keyword sort-item">
				<span class="target-keyword-title {% if target_keyword_duplicate[language_id][sort_order] %}text-danger{% endif %}">{{ keyword }}</span>
				<span class="icons"><i class="icon-delete fa fa-minus-circle" onclick="$(this).parents('.target-keyword').remove()"></i><i class="icon-drag fa fa-bars"></i></span>
				<input type="hidden" name="target_keyword[{{ language_id }}][]" value="{{ keyword }}" />
			</div>
			{% endfor %}
        </div>
    </div>
</div>
{% endif %}
{% endfor %}